<Page
    x:Class="DimensionCalculator.Compound_Interest.CompoundInterest_R"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DimensionCalculator.Compound_Interest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="btnCal_ci_i" Content="Calculate" HorizontalAlignment="Left" Margin="46,277,0,0" VerticalAlignment="Top" Width="236"                           Background="#FF3EA0F0"/>
        <TextBox x:ConnectionId='2' x:Name="txtOutput_ci_i" HorizontalAlignment="Left" Margin="46,314,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="14" Width="304" IsReadOnly="True" Background="#330096FF"/>
        <TextBox x:ConnectionId='3' x:Name="txtP_ci_i" HorizontalAlignment="Left" Margin="181,58,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="36" Width="169" Background="#330096FF"/>
        <TextBlock x:ConnectionId='4' x:Name="lblP_ci_i" HorizontalAlignment="Left" Margin="46,58,0,0" TextWrapping="Wrap" Text="Principal Amount " VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='5' x:Name="txtN_ci_i" HorizontalAlignment="Left" Margin="181,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="36" Width="169" Background="#330096FF"/>
        <TextBox x:ConnectionId='6' x:Name="txtA_ci_i" HorizontalAlignment="Left" Margin="181,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="36" Width="169" Background="#330096FF"/>
        <TextBlock x:ConnectionId='7' x:Name="lblN_ci_i" HorizontalAlignment="Left" Margin="46,140,0,0" TextWrapping="Wrap" Text="Number of Years" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='8' x:Name="lblA_ci_i" HorizontalAlignment="Left" Margin="32,99,0,0" TextWrapping="Wrap" Text="Accumulated Amount" VerticalAlignment="Top"/>
        <ComboBox x:ConnectionId='9' x:Name="comboBox_compoundint_i" HorizontalAlignment="Left" Margin="181,181,0,0" VerticalAlignment="Top" Width="169" Height="36" Background="#330096FF">
            <ComboBoxItem Content="Anually"/>
            <ComboBoxItem Content="Semi-Anually"/>
            <ComboBoxItem Content="Monthly"/>
            <ComboBoxItem Content="Quarterly"/>
        </ComboBox>
        <Button x:ConnectionId='10' x:Name="btnBackCI_r2" Content="Back" HorizontalAlignment="Left" Margin="10,598,0,0" VerticalAlignment="Top"                            Background="#330096FF"/>
        <TextBox x:ConnectionId='11' x:Name="lblHeader_ci_R" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Calculate interest rate (i)" VerticalAlignment="Top" Width="340" IsReadOnly="True" Background="#330096FF"/>
        <Button x:ConnectionId='12' x:Name="btnReset_ci_R" Content="Reset" HorizontalAlignment="Left" Margin="287,277,0,0" VerticalAlignment="Top" Height="32" Width="63"                             Background="#FF3EA0F0"/>

    </Grid>
</Page>

